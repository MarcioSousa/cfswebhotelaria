@model IEnumerable<cfshotelaria.Models.Cliente>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Listagem de CLIENTES";
}

@if(@TempData["Message"] != null)    
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Relação de CLIENTES registrados
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Rg)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cpf)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Contato)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataOcupacao)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rg)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cpf)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contato)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataOcupacao)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ClienteId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ClienteId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ClienteId })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Registrar um novo CLIENTE","Create", null, new { @class = "btn btn-success" })
    </div>
</div>

@section styles{
    <link href= "@Url.Content("~/Content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet" />
    }

@section ScriptPage {
    <script src="@Url.Content("~/Scripts/DataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Scripts/DataTables/dataTables.bootstrap.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.table').dataTable();
            $('li').removeClass("active");
            $('#liClientes').addClass("active");
        });
    </script>
    }